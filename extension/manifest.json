{
    "description": "A Better History page inspired by Vivaldi",
    "manifest_version": 2,
    "name": "better-history-ng",
    "version": "2.2.2",
    "homepage_url": "https://github.com/Christoph-Wagner/firefox-better-history-ng",
    "background": {
        "scripts": ["dist/background.js"]
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{058af685-fc17-47a4-991a-bab91a89533d}"
        }
    },

    "icons": {
        "16": "history.svg",
        "32": "history.svg",
        "48": "history.svg",
        "96": "history.svg"
    },

    "browser_action": {
        "default_icon": "history.svg",
        "default_title": "Better History NG"
    },

    "commands": {
        "open-better-history": {
            "suggested_key": {
                "default": "Ctrl+Alt+H"
            }
        }
    },

    "permissions": [
        "history",
        "storage"
    ]
}
